{
  "name": "Memoria Vault",
  "short_name": "Memoria",
  "description": "Your personal memory vault - preserve, organize, and cherish your precious moments",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f172a",
  "theme_color": "#6366f1",
  "orientation": "portrait-primary",
  "scope": "/",
  "icons": [
    {
      "src": "/pwa-icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/pwa-icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "categories": ["productivity", "lifestyle", "photo"],
  "screenshots": [
    {
      "src": "/screenshot-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/screenshot-2.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*", "audio/*"]
        }
      ]
    }
  },
  "shortcuts": [
    {
      "name": "Upload Memory",
      "short_name": "Upload",
      "description": "Quickly upload a new memory",
      "url": "/?action=upload",
      "icons": [{ "src": "/upload-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "View Gallery",
      "short_name": "Gallery",
      "description": "Browse your memories",
      "url": "/?action=gallery",
      "icons": [{ "src": "/gallery-icon.png", "sizes": "96x96" }]
    }
  ]
}
